{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    extends: [
        'config:recommended',
        ':disableRateLimiting',
    ],
    includePaths: [
        '**/src/renderer/lib/**',
    ],
    customManagers: [
        {
            customType: 'regex',
            managerFilePatterns: [
                '/src/renderer/lib/install\\.ts$/',
            ],
            matchStrings: [
                '"image":\\s*"(?<depName>ghcr\\.io/dockur/windows):(?<currentValue>[^"]+)"',
            ],
            datasourceTemplate: 'docker',
            depTypeTemplate: 'container',
        },
    ],
}
